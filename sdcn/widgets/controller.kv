#:kivy 1.0
<SdcnController>:
	main_menu_layout: _main_menu_layout
	sub_menu_layout: _sub_menu_layout
	workflow_layout: _workflow_layout

	pdf_button: _pdf_button
	document_button: _document_button
	file_button: _file_button
	picture_button: _picture_button
	music_button: _music_button
	video_button: _video_button
	
	padding: 20
	orientation: 'vertical'
	StackLayout:
		orientation: 'tb-lr'
		size_hint_y:0.2
		Image:
			source: "logo.png"
			size_hint_x: 0.1
			size_hint_y: 1
		Image:
			source: "name.png"
			size_hint_x: 0.7
			size_hint_y: 0.5
		Label:
			size_hint_x: 0.7
			size_hint_y: 0.5
		Button:
			size_hint_x: 0.075
			size_hint_y: 0.5
			text: 'RUN'
	BoxLayout:
		BoxLayout:
			padding: 10
			orientation: 'vertical'
			StackLayout:
				id: _main_menu_layout
				Button:
					id: _document_button
					text: 'Document'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("DocumentMenu", _document_button)
				Button:
					id: _picture_button
					text: 'Picture'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("PictureMenu", _picture_button)
				Button:
					id: _file_button
					text: 'File and Folder'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("FileAndFolderMenu", _file_button)
				Button:
					id: _pdf_button
					text: 'PDF'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("PdfMenu", _pdf_button)
				Button:
					id: _music_button
					text: 'Music'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("MusicMenu", _music_button)
				Button:
					id: _video_button
					text: 'Video'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.change_submenu("VideoMenu", _video_button)
		BoxLayout:
			id: _sub_menu_layout
			padding: 10
		ScrollView:
			StackLayout:
				id: _workflow_layout
				spacing: 1
				##cols: 1
				size_hint_y:  None
				height:500

