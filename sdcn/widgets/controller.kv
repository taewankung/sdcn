#:kivy 1.0
<SdcnController>:
	BoxLayout:
		padding: 20
		orientation: 'vertical'
		StackLayout:
			orientation: 'tb-lr'
			size_hint_y:0.2
			Image:
				source: "logo.png"
				size_hint_x: 0.1
				size_hint_y: 1
			Image:
				source: "name.png"
				size_hint_x: 0.7
				size_hint_y: 0.5
			Label:
				size_hint_x: 0.7
				size_hint_y: 0.5
			Button:
				id: play_button
				enable: 0
				background_normal: 'play1.png'
	        	background_down: 'pause1.png'
				size_hint_x: None
				size_hint_y: None
				size:(60,60)
				on_press: root.status_play_button()
					
		BoxLayout:
			BoxLayout:
				size_hint: (None,1)
				size: (210,1)
				padding: 10
				orientation: 'vertical'
				StackLayout:
					id: main_menu_layout
					Label:
						text: 'Menu'
						size_hint_x: 1
						size_hint_y: None
						size:(100,50)
					Button:
						id: document_button
						background_color:(0,1.49,2,2)
						text: 'Document Manager'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("DocumentMenu", document_button)
					Button:
						id: picture_button
						text: 'Picture'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("ImageMenu", picture_button)
					Button:
						id: file_button
						text: 'File and Folder'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("FileAndFolderMenu", file_button)
					Button:
						id: pdf_button
						text: 'PDF'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("PdfMenu", pdf_button)
					Button:
						id: music_button
						text: 'Music '
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("MusicMenu", music_button)
					Button:
						id: video_button
						text: 'Video'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.change_submenu("VideoMenu", video_button)
					Button:
						id: save_button
						text: 'Save As...'
						size_hint_x: 1
						size_hint_y: 0.075
						on_press: root.save_as()
						
			StackLayout:
				size_hint: (None,1)
				size: (210,1)
				padding: 10
				Label:
					text: 'Actions'
					size_hint_x: 1
					size_hint_y: None
					size:(100,50)
				StackLayout:
					id: sub_menu_layout
			StackLayout:
				Label:
					text: 'New'
					size_hint_x: 1
					size_hint_y: None
					size:(100,65)
				ScrollView:
					bar_color:(2,0,0,1)
					GridLayout:
						id: workflow_layout
						spacing: 1
						cols: 1
						size_hint_y:  None
						height:500
					
					
