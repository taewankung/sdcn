#:kivy 1.0
<SdcnController>:
	BoxLayout:
		padding: 20
		orientation: 'vertical'
		StackLayout:
			orientation: 'tb-lr'
			size_hint_y:0.2
			Image:
				source: "../sdcn/data/images/logo.png"
				size_hint_x: 0.1
				size_hint_y: 1
			Image:
				source: "../sdcn/data/images/name.png"
				size_hint_x: 0.7
				size_hint_y: 0.5
			Label:
				id: out_label
				text: '/home'
				size_hint_x: 0.7
				size_hint_y: 0.5
			Button:
				id: play_button
				enable: 0
				background_normal: '../sdcn/data/images/play1.png'
	        	background_down: 'pause1.png'
				size_hint_x: None
				size_hint_y: None
				size:(60,60)
				on_press: root.status_play_button()
					 
		BoxLayout:
			BoxLayout:
				size_hint: (None,1)
				size: (234,1)
				padding: 20
				orientation: 'vertical'
				StackLayout:
					
					id: main_menu_layout
	##				canvas.before:
	##    				Color:
	##    					rgb: (0.5,0.5,0.5,2) # your color here
	##    				Rectangle:
	##    					pos: self.pos
	##    					size: self.size
					Label:
						text: 'Menu'
						size_hint_x: 1
						size_hint_y: None
						size:(100,50)
					Button:
						id: document_button
						##background_color:(0,1.49,2,2)
						background_normal: '../sdcn/data/images/doccument_icon.png'
						
						##text: 'Document Manager'
						background_disabled_normal: '../sdcn/data/images/document_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/document_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("DocumentMenu", document_button)
					Button:
						id: picture_button
						background_normal: '../sdcn/data/images/image_icon.png'
						##text: 'Picture'
						background_disabled_normal: '../sdcn/data/images/image_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/image_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("ImageMenu", picture_button)
					Button:
						id: file_button
						background_normal: '../sdcn/data/images/File_icon.png'
						
						##text: 'File and Folder'
						background_disabled_normal: '../sdcn/data/images/File_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/File_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("FileAndFolderMenu", file_button)
					Button:
						id: pdf_button
						background_normal: '../sdcn/data/images/PDF_icon.png'
						##background_down: '../sdcn/data/images/PDF_icon.png'
						##text: 'PDF'
						background_disabled_normal: '../sdcn/data/images/PDF_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/PDF_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("PdfMenu", pdf_button)
					Button:
						id: music_button
						background_normal: '../sdcn/data/images/music_icon.png'
						##text: 'Music '
						background_disabled_normal: '../sdcn/data/images/music_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/music_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("MusicMenu", music_button)
					Button:
						id: video_button
						background_normal: '../sdcn/data/images/video_icon.png'
						##text: 'Video'
						background_disabled_normal: '../sdcn/data/images/video_icon_disable.png'
						background_disabled_down: '../sdcn/data/images/video_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("VideoMenu", video_button)
				#	Button:
				#		id: save_button
				#		text: 'Save As...'
				#		size_hint_x: 1
				#		size_hint_y: 0.075
				#		on_press: root.save_as()
						
			StackLayout:
				size_hint: (None,1)
				size: (250,1)
				padding: 20
				Label:
					text: 'Actions'
					size_hint_x: 1
					size_hint_y: None
					size:(100,50)
				StackLayout:
					id: sub_menu_layout
			StackLayout:
				padding: 10
				Label:
					text: 'New'
					size_hint_x: 1
					size_hint_y: None
					size:(100,65)
				ScrollView:
					# bar_color:(2,0,0,1)
					GridLayout:
						id: workflow_layout
						spacing: 10
						cols: 1
						size_hint_y:  None
						height:500
		BoxLayout:
			size_hint: (1,0.1)
			Label:
					
					
