#:kivy 1.0
<SdcnController>:
	BoxLayout:
		padding: 20
		orientation: 'vertical'
		StackLayout:
			orientation: 'tb-lr'
			size_hint_y:0.2
			Image:
				source: root.menu_path +'/../data/images/logo.png'
				size_hint_x: 0.1
				size_hint_y: 1
			Image:
				source: root.menu_path +'/../data/images/name.png'
				size_hint_x: 0.7
				size_hint_y: 0.5
			Label:
				id: out_label
				size_hint_x: 0.7
				size_hint_y: 0.5
				font_size: 30
			Button:
				id: play_button
				enable: 0
				background_normal: root.menu_path +'/../data/images/play1.png'
	        	background_down: root.menu_path +'/../data/images/pause.png'
				size_hint_x: None
				size_hint_y: None
				size:(60,60)
				font_size: 20
				on_press: root.status_play_button()
					
		BoxLayout:
			StackLayout:
				size_hint: (None,1)
				size: (250,1)
				padding: 20
				Label:
					text: 'Workflow Maneger'
					size_hint_x: 1
					size_hint_y: None
					size:(100,50)
					font_size: 30
				Button:
					id: save_button
				##background_normal: root.menu_path +'/../data/images/video_icon.png'
					text: 'Save'
				##background_disabled_normal: root.menu_path +'/../data/images/video_icon_disable.png'
				##background_disabled_down: root.menu_path +'/../data/images/video_icon_disable.png'
					size_hint_x: None
					size_hint_y: None
					size:(234,50)
					on_press: root.save_workflow()
					font_size: 30
				Button:
					id: open_button
					##background_normal: root.menu_path +'/../data/images/video_icon.png'
					text: 'Open'
					##background_disabled_normal: root.menu_path +'/../data/images/video_icon_disable.png'
					##background_disabled_down: root.menu_path +'/../data/images/video_icon_disable.png'
					size_hint_x: None
					size_hint_y: None
					size:(234,50)
					on_press: root.open_workflow()
					font_size: 30
				Button:
					id: new
					text: 'New'
					size_hint_x: None
					size_hint_y: None
					size:(234,50)
					font_size: 30
					on_press: root.new()
				Button:
					id: exit
					text: 'Exit'
					size_hint_x: None
					size_hint_y: None
					size:(234,50)
					font_size: 30
					on_press: root.exit()
			BoxLayout:
				size_hint: (None,1)
				size: (234,1)
				padding: 20
				orientation: 'vertical'
				StackLayout:
					id: main_menu_layout
					Label:
						text: 'Menu'
						size_hint_x: 1
						size_hint_y: None
						size:(100,50)
						font_size: 30
					Button:
						id: document_button
						##background_color:(0,1.49,2,2)
						background_normal: root.menu_path +'/../data/images/doccument_icon.png'
						
						##text: 'Document Manager'
						background_disabled_normal: root.menu_path +'/../data/images/document_icon_disable.png'
						background_disabled_down: root.menu_path +'/../data/images/document_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("DocumentMenu", document_button)
					Button:
						id: picture_button
						background_normal: root.menu_path +'/../data/images/image_icon.png'
						##text: 'Picture'
						background_disabled_normal: root.menu_path +'/../data/images/image_icon_disable.png'
						background_disabled_down: root.menu_path +'/../data/images/image_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("ImageMenu", picture_button)
					Button:
						id: pdf_button
						background_normal: root.menu_path +'/../data/images/PDF_icon.png'
						##background_down: root.menu_path +'/../../data/images/PDF_icon.png'
						##text: 'PDF'
						background_disabled_normal: root.menu_path +'/../data/images/PDF_icon_disable.png'
						background_disabled_down: root.menu_path +'/../data/images/PDF_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("PdfMenu", pdf_button)
					Button:
						id: music_button
						background_normal: root.menu_path +'/../data/images/music_icon.png'
						##text: 'Music '
						background_disabled_normal: root.menu_path +'/../data/images/music_icon_disable.png'
						background_disabled_down: root.menu_path +'/../data/images/music_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("MusicMenu", music_button)
					Button:
						id: video_button
						background_normal: root.menu_path +'/../data/images/video_icon.png'
						##text: 'Video'
						background_disabled_normal: root.menu_path +'/../data/images/video_icon_disable.png'
						background_disabled_down: root.menu_path +'/../data/images/video_icon_disable.png'
						size_hint_x: None
						size_hint_y: None
						size:(234,50)
						on_press: root.change_submenu("VideoMenu", video_button)			
			StackLayout:
				size_hint: (None,1)
				size: (250,1)
				padding: 20
				Label:
					text: 'Actions'
					size_hint_x: 1
					size_hint_y: None
					size:(100,50)
					font_size: 30
				StackLayout:
					id: sub_menu_layout
			StackLayout:
				padding: 10
				Label:
					text: 'Workflow'
					size_hint_x: 1
					size_hint_y: None
					size:(100,65)
					font_size: 30
				ScrollView:
					# bar_color:(2,0,0,1)
					GridLayout:
						id: workflow_layout
						spacing: 10
						cols: 1
						size_hint_y:  None
						height:500
		BoxLayout:
			size_hint: (1,0.1)
			
				