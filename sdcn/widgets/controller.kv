#:kivy 1.0
<SdcnController>:
	main_manu_layout: _main_manu_layout
	sub_manu_layout: _sub_manu_layout
	workflow_layout: _workflow_layout

	pdf_button: pdf_button
	document_button: document_button
	file_button: file_button
	pic_button: pic_button
	music_button: music_button
	video_button: video_button
	padding: 20
	orientation: 'vertical'
	StackLayout:
		orientation: 'tb-lr'
		size_hint_y:0.2
		Image:
			source: "logo.png"
			size_hint_x: 0.1
			size_hint_y: 1
		Image:
			source: "name.png"
			size_hint_x: 0.7
			size_hint_y: 0.5
		Label:
			size_hint_x: 0.7
			size_hint_y: 0.5
		Button:
			size_hint_x: 0.075
			size_hint_y: 0.5
			text: 'RUN'
	BoxLayout:
		BoxLayout:
			padding: 10
			orientation: 'vertical'
			StackLayout:
				id: _main_manu_layout
				Button:
					id: document_button
					text: 'Document'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_document()
				Button:
					id: pic_button
					text: 'Picture'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_pic()
				Button:
					id: file_button
					text: 'File and Folder'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_files()
				Button:
					id: pdf_button
					text: 'PDF'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_pdf()
				Button:
					id: music_button
					text: 'Music'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_music()
				Button:
					id: video_button
					text: 'Video'
					size_hint_x: 1
					size_hint_y: 0.075
					on_press: root.do_action_video()
		BoxLayout:
			id: _sub_manu_layout
			padding: 10
		StackLayout:
			id: _workflow_layout
			padding: 10
<Layout_box3>:
	
