		text: 'Find File'
		background_normal: '../sdcn/data/images/icon7.png'
		size_hint_x: 1
		size_hint_y: None
		size:(1,40)
		on_press: root.add_to_workflow_layout(self)
	Button:
		text: 'Write File'
		background_normal: '../sdcn/data/images/icon7.png'
		size_hint_x: 1
		size_hint_y: None
		size:(1,40)
		on_press: root.add_to_workflow_layout(self)
	Button:
		text: 'Add File'
		background_normal: '../sdcn/data/images/icon7.png'
		size_hint_x: 1
		size_hint_y: None
		size:(1,40)
		on_press: root.add_to_workflow_layout(self)