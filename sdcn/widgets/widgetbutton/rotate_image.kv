<RotateImage>:
	size_hint: (1,None)
	size: (1,100)
	canvas.before:
		Color:
			rgba: (0.8,0.8,0.8,0.9)
		Rectangle:
			pos: self.pos
            size: self.size
	Label:
		id: workflow_header
		size_hint:(0.8999,0.5)
		text: 'Rotate Image'
		canvas.before:
			Color:
				rgba: (0.5,0.5,0.5,1)
			Rectangle:
				pos: self.pos
            	size: self.size
        color: (0,0,0,1)
        font_size: 20
	Button:
		text: 'X'
		size_hint: (0.1,0.5)
		on_press: root.delete_in_workflow_layout(root)
		font_size: 20
	Label:
		text: 'Degree:'
		size_hint: (0.2,0.5)
		color: (0,0,0,1)
		font_size: 20
	TextInput:
		id: degree
		multiline: False
		size_hint: (0.2,0.5)
		font_size: 20
	Label:
		text: 'Name:'
		size_hint: (0.2,0.5)
		color: (0,0,0,1)
		font_size: 20
	TextInput:
		id: name_input
		multiline: False
		size_hint: (0.2,0.5)
		font_size: 20