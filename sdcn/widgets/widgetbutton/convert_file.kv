<ConvertFile>:
	size_hint: (None,None)
	size: (1,100)
	canvas.before:
		Color:
			rgba: (0.8,0.8,0.8,0.9)
		Rectangle:
			pos: self.pos
            size: self.size
	Label:
		id: workflow_header
		text: 'Convert Files'
		size_hint:(0.8999,0.5)
		canvas.before:
			Color:
				rgba: (0.5,0.5,0.5,1)
			Rectangle:
				pos: self.pos
            	size: self.size
        color: (0,0,0,1)
	Button:
		text: 'X'
		size_hint:(0.1,0.5)
		on_press: root.delete_in_workflow_layout(root)
		
	Spinner:
		id: type
		text: '.doc to Text'
		values: ('.doc to Text','.doc to HTML')
		size_hint: (0.5,0.5)
		size:  (1,44)
	Label:
		text: 'to:'
		size_hint: (0.25,.5)
        color: (0,0,0,1)
	TextInput:
		id: output
		size_hint: (.25,0.5)
		multiline: False