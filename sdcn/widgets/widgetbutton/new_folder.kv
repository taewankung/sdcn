<NewFolder>:
	size_hint: (None,None)
	size: (1,100)
	canvas.before:
		Color:
			rgba: (0.8,0.8,0.8,0.9)
		Rectangle:
			pos: self.pos
            size: self.size
	Label:
		id: workflow_header
		text: 'New Folder'
		size_hint:(0.8999,0.5)
		canvas.before:
			Color:
				rgba: (0.5,0.5,0.5,1)
			Rectangle:
				pos: self.pos
            	size: self.size
	Button:
		text: 'X'
		size_hint:(0.1,0.5)
		on_press: root.delete_in_workflow_layout(root)
	Label:
		text: 'Name:'
		size_hint: (0.5,0.5)
	TextInput:
		id: text_folder
		multiline: False
		size_hint: (0.5,0.35)

        	
