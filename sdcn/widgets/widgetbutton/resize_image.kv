<ResizeImage>:
	size_hint: (1,None)
	size: (1,100)
	canvas.before:
        Rectangle:
        	source: '../sdcn/data/images/gray1.png'
            pos: self.pos
            size: self.size
	Label:
		id: workflow_header
		text: 'Resize Image'
		size_hint:(0.89,0.5)
		canvas.before:
			Rectangle:
				source: '../sdcn/data/images/gray2.png'
				pos: self.pos
            	size: self.size
	Button:
		text: 'X'
		size_hint:(0.1,0.5)
		on_press: root.delete_in_workflow_layout(root)
	Label:
		text: 'size:'
		size_hint: (0.2,0.5)
	TextInput:
		id: size_per
		multiline: False
		size_hint: (0.2,0.5)
	Label:
		text: '%'
		size_hint: (0.1,0.5)
	Label:
		text: 'Type:'
		size_hint: (0.2,0.5)
	TextInput:
		id: type_name
		multiline: False
		size_hint: (0.2,0.5)