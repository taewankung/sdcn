<CompressFile>:
	size_hint: (None,None)
	size: (1,100)
	canvas.before:
		Color:
			rgba: (0.8,0.8,0.8,0.9)
		Rectangle:
			pos: self.pos
            size: self.size
	Label:
		id: workflow_header
		text: 'Compress File'
		size_hint:(0.8999,0.25)
		canvas.before:
			Color:
				rgba: (0.5,0.5,0.5,1)
			Rectangle:
				pos: self.pos
            	size: self.size
        color: (0,0,0,1)
        font_size: 20
	Button:
		text: 'X'
		size_hint:(0.1,0.25)
		on_press: root.delete_in_workflow_layout(root)
		font_size: 20
	
	Spinner:
		id: type
		text: '.choose'
		values: ('.Zip','.gzip')
		size_hint: (1,0.50)
		size:  (1,44)
		font_size: 20
	Label:
		text: 'output_name'
		size_hint: (0.5,0.25)
		color: (0,0,0,1)
		font_size: 20
	TextInput:
		id: output_name
		size_hint: (0.5,0.25)
		font_size: 20
