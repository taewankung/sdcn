<FindFile>:
	size_hint: (None,None)
	##size: (100,100)
	canvas.before:
		Color:
			rgba: (0.8,0.8,0.8,0.9)
		Rectangle:
			pos: self.pos
            size: self.size
    Label:
    	id: workflow_header 
		size_hint: (0.8999,0.30)
		canvas.before:
			Color:
				rgba: (0.5,0.5,0.5,1)
			Rectangle:
				pos: self.pos
            	size: self.size
		text: 'Find File:'
	Button:
		text: 'X'
		size_hint:(0.1,0.30)
		on_press: root.delete_in_workflow_layout(root)
	Button:
		id: _browser_button
		text: 'Browser'
		size_hint: (0.5,0.30)
		on_press: root.open_file_chooser()
	TextInput:
    	id: path_input
		size_hint: (0.49,0.30)
		text: root.popup_filechoser.filechooser.path
	Label:
		text: 'filter'
		size_hint: (0.25,0.30)
	TextInput:
		id: file_input
		size_hint: (0.74,0.30)