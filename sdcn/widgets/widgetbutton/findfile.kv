<FindFile>:
	size_hint: (None,None)
	##size: (100,100)
	canvas.before:
        Rectangle:
        	source: '../sdcn/data/images/gray1.png'
            pos: self.pos
            size: self.size
    Label:
    	id: workflow_header 
    	text: 'Find File'
		size_hint: (0.89,0.5)
		canvas.before:
			Rectangle:
				source: '../sdcn/data/images/gray2.png'
				pos: self.pos
            	size: self.size
	Button:
		text: 'X'
		size_hint:(0.1,0.5)
		on_press: root.delete_in_workflow_layout(root)
	Button:
		id: _browser_button
		text: 'Browser'
		size_hint: (0.5,0.5)
		on_press: root.open_file_chooser()
	Label:
		text: 'find'
		size_hint: (0.25,0.5)
	TextInput:
		id: file_input
		size_hint: (0.25,0.5)